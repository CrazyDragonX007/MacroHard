<%- include('header'); -%>
<div class="row">
        <h1 style="text-align: center">Add Information about your project!</h1>
        <div style="width: 30%; margin: 25px auto;">
		<form id="project">
			<div class="form-group">
		    <input class="form-control" type="text" name="title" placeholder="Title"/></div>
		    <div class="form-group">
		    <input class="form-control" type="text" name="description" placeholder="Description"/></div>
		    <div class="form-group">
		    <input class="form-control" type="number" name="price" placeholder="Enter price"/></div>
			<div class="form-group">
				<label for="image">Upload Image</label>
				<input class="input" id="image" name="image" type="file" />
			</div>
			<br/>
			<div class="form-group">
			<select name="category" class="form-control">
		        <option value=0>Software</option>
		        <option value=1>Hardware</option>
		    </select></div>
		    <button type="submit" id="submit" class="btn btn-lg btn-primary">Submit!</button>
		</form>
		<a href="/">Go back!</a>
		</div>
</div>
<script>
	const btn = document.getElementById('submit');
	const form = document.getElementById('project');
	btn.addEventListener('click', (e) => {
		e.preventDefault();
		fetch('/projects', {
			method: 'POST',
			body: new FormData(form),
		}).then(()=>window.location.replace("/"));
	});
</script>
